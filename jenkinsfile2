pipeline{
    agent any

    tools{
        maven 'maven3.8.6'
    }



    stages{
        stage('checkoutcode'){
            steps{
                git credentialsId: 'GIT_CREDENTIALS', url: 'https://github.com/reddyvarisrinu95/maven-web-application.git'
            }
        }

        stage('buildapackage'){
            steps{
                sh "mvn clean package"
            }
        }
        stage('build an image'){
            steps{
                sh "docker build -t maven-web-application:0.0.1 ."
            }
        }
    }
}//pipelineclosing